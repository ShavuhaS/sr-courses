// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  FRESH
  DAIRY
  BAKERY
  MEAT
  SEAFOOD
  CANNED
  BEVERAGE
  SNACK
  CONDIMENT
  CEREAL
}

model Product {
  productId   Int              @id @default(autoincrement()) @map("product_id")
  productName String           @map("product_name")
  category    Category
  amount      Int              @default(0)
  price       Float
  orders      OrderedProduct[]
}

model Customer {
  customerId Int      @id @default(autoincrement()) @map("customer_id")
  email      String   @unique
  firstName  String   @map("first_name")
  middleName String?  @map("middle_name")
  lastName   String   @map("last_name")
  birthDate  DateTime @map("birth_date")
  orders     Order[]
}

model Employee {
  employeeId Int     @id @default(autoincrement()) @map("employee_id")
  firstName  String  @map("first_name")
  middleName String? @map("middle_name")
  lastName   String  @map("last_name")
  position   String
  orders     Order[]
}

model Order {
  orderId         Int              @id @default(autoincrement()) @map("order_id")
  employee        Employee         @relation(fields: [employeeId], references: [employeeId])
  employeeId      Int              @map("employee_id")
  customer        Customer         @relation(fields: [customerId], references: [customerId])
  customerId      Int
  orderAddress    String           @map("order_address")
  deliveryCost    Float            @default(0) @map("delivery_cost")
  orderDate       DateTime         @default(now()) @map("order_date")
  orderedProducts OrderedProduct[]
}

model OrderedProduct {
  productId     Int     @map("product_id")
  orderId       Int     @map("order_id")
  product       Product @relation(fields: [productId], references: [productId])
  order         Order   @relation(fields: [orderId], references: [orderId])
  productAmount Float   @map("product_amount")

  @@id([productId, orderId])
}
